<h1>Product Listing:</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |fruit| %>
      <tr>
        <td><%= fruit.name %></td>
        <td><%= fruit.price %></td>
        <td><%= link_to 'Add to Cart', add_to_cart_path(@cart, :product_id => fruit), :method => :post  %></td>
      </tr>
  <% end %>
</table>

<br />

<h1>Cart Items:</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>

  <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to 'Delete', remove_from_cart_path(@cart, :line_item_id => item), :class => "btn btn-danger btn-mini", :confirm => 'Are you sure?',
                        :method => :delete %></td>
      </tr>
  <% end %>
</table>

</br>
</br>
</br>

